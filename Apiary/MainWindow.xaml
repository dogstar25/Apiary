<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Apiary.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Apiary"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    Title="Glow Hexagon App"
    >

    <Grid>
        <!-- Win2D Canvas for Drawing the Hexagon -->
        <canvas:CanvasControl x:Name="HexagonCanvas" Draw="HexagonCanvas_Draw" ClearColor="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
